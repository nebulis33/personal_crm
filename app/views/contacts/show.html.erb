<figure class="image is-128x128">
    <img src="https://www.tibs.org.tw/images/default.jpg" alt="contact image" class="is-rounded">
</figure>
<h1 class="title is-1"><%= @contact.full_name %></h1>
<p>ğŸ‚<%= @contact.birthday.strftime("%m/%d/%y") || "No birthday saved!" %></p>
<div class="block">
    <%= link_to "Edit contact", edit_contact_path(@contact), class: 'button' %> 
    <%= link_to "Delete contact", contact_path(@contact), class: 'button is-danger', method: :delete, data: {confirm: "Are you sure?"} %>
<div>
<aside class="block">
    <address>
        ğŸ <%= @contact.address || '' %>
        <br>
        ğŸ“§<%= @contact.email || '' %>
        <br>
        â˜ï¸<%= @contact.phone_number || '' %>
    </address>
</aside>

<%= link_to "New event", new_contact_event_path(@contact), class: 'button' %>

<p>
last in-person activity: <%= @last_activity_type %> <%= @last_activity_date %> |
 <%= "last contact was a #{@last_contact_type} on:" %> <%= @last_contact_date %>
</p>

<h3 class="title is-3">
    Upcoming Event:
</h3> 
<div>
    <% if @upcoming_event %>
        <%= @upcoming_event.interaction_type %> on <%= @upcoming_event.date.strftime("%m/%d/%y") %>
        <%= link_to "Cancel Event", contact_event_path(@contact, @upcoming_event), class: 'button', method: :delete, data: {confirm: "Are you sure?"} %>
    <% else %>
        No upcoming events with this friend!
    <% end %>
</div>

<h3 class="title is-3">
    Past Events:
</h3>
<div class="columns">
    <div class="column is-half">
        <% @past_events.each do |e| %>
            <div class="box"><%= e.interaction_type %></div>
        <% end %>
    </div>
</div>
